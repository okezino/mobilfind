<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_verification_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.VerificationFragment">

    <EditText
        android:id="@+id/fragment_verification_OTP_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:hint="OTP Code..."
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fragment_verification_signIn_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:backgroundTint="#0C0C0C"
        android:text="sign in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_verification_OTP_et" />

    <ProgressBar
        android:id="@+id/fragment_verification_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="45dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/fragment_verification_signIn_btn"
        app:layout_constraintTop_toBottomOf="@+id/fragment_verification_signIn_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>