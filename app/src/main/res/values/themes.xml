<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mobifind" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tool_bar</item>
        <item name="colorPrimaryVariant">@color/status_bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Material Dialog Customizations -->
        <item name="material_dialog_background">@color/tool_bar</item>
        <item name="material_dialog_message_text_color">@color/dark_blue</item>
        <item name="material_dialog_title_text_color">@color/dark_blue</item>
        <item name="material_dialog_positive_button_color">@color/dark_blue</item>
        <item name="material_dialog_positive_button_text_color">@color/white</item>
        <item name="material_dialog_negative_button_text_color">@color/dark_blue</item>
    </style>

    <style name="MyTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
    </style>

    <!--  Alert Dialog Customizations -->
    <style name="MyDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <!--  Alert Dialog Button Customizations -->
    <style name="MyAlertButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:width">150dp</item>
    </style>

    <!--  Image options Alert Dialog Customizations -->
    <style name="ImageDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorOnPrimary">@color/dark_blue</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="android:textColorPrimary">@color/dark_blue</item>
        <item name="textColorAlertDialogListItem">@color/dark_blue</item>
        <item name="android:background">@color/tool_bar</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyAlertButton</item>
    </style>

    <style name="edtFieldStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_marginTop">40dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxStrokeColor">@color/dark_blue</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/dark_blue</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Theme.Mobifind.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Mobifind.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Mobifind.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AuthenticationTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/tool_bar</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>